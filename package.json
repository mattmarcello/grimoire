{
  "name": "grimoire-gen",
  "version": "0.1.0",
  "description": "Generate navigable documentation CLIs for any codebase",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpm/grimoire"
  },
  "keywords": [
    "cli",
    "documentation",
    "codebase",
    "ai",
    "effect",
    "scaffolding",
    "navigation"
