    "@effect/experimental": "^0.58.0",
    "@effect/platform": "^0.94.2",
    "@effect/platform-node": "^0.104.0",
    "effect": "^3.19.14",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
